<%- include('header') %>




  <main class="form-signin" style="padding: 10% 0; text-align: center;">
    <form action="/register" method="POST">
      <i class="fas fa-user-graduate fa-4x" style="padding-bottom: 20px;"></i>
      <h1 class="h3 mb-3 fw-normal">Register</h1>
      <!-- flash messages -->
      <% if(success != ""){ %>
      <div class='alert-wrapper'>
        <div class="alert alert-success alert-fixed" role="alert">
          <%= success %>
        </div>
      </div>
      <% } %>
      <% if(error != ""){ %>
      <div class='alert-wrapper'>
        <div class="alert alert-danger alert-fixed" role="alert">
          <%= error %>
        </div>
      </div>
      <% } %>

      <label for="inputEmail" class="visually-hidden">Email address</label>
      <input type="email" id="inputEmail" class="form-control" name="username" placeholder="电邮箱地址" required autofocus>
      <label for="Name" class="visually-hidden">Name</label>
      <input type="text" id="inputPassword" class="form-control" name="name" placeholder="名字" required>
      <label for="NameOfSchool" class="visually-hidden">Name Of School</label>
      <input type="text" id="inputPassword" class="form-control" name="nameOfSchool" placeholder="学校名字" required>
      <label for="inputPassword" class="visually-hidden">City</label>
      <input type="text" id="inputPassword" class="form-control" name="city" placeholder="城市" required>
      <label for="inputPassword" class="visually-hidden">Password</label>
      <input type="password" id="inputPassword" class="form-control" name="password" placeholder="密码" required>
      <label for="inputPassword" class="visually-hidden">Re-enter Password</label>
      <input type="password" id="inputPassword" class="form-control" name="reEnterPassword" placeholder="重复打密码" required>


      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>
      <button class="submit-button w-100 btn btn-lg btn-primary" type="submit">登记</button>

        <a  href="/login">Log In</a>

    </form>
  </main>



  <%- include('footer_index') %>
